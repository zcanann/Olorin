import { HorizontalBox } from "std-widgets.slint";

import { Theme } from "./../../theme.slint";

import { Tooltip } from "../tooltips/tooltip.slint";
import { Checkbox } from "checkbox.slint";

export component TextCheckbox {
    in-out property <bool> is-checked: false;
    in property <string> text;
    callback check-changed(bool);
    Rectangle {
        container := HorizontalBox {
            padding-top: root.padding-top;
            padding-bottom: root.padding-bottom;
            padding-left: root.padding-left;
            padding-right: root.padding-right;
            checkbox := Checkbox {
                is-checked <=> root.is-checked;
                check-changed(value) => {
                    root.check-changed(value);
                }
            }

            text := Text {
                text: root.text;
                color: Theme.foreground;
            }
        }
    }
}
